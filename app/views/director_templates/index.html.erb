<h1>
  List of all directors
</h1>

<hr>

<form action="insert_director_record" method="post">
  <div>
    <label for="direc_name">Name</label>
    <input type="text" id="direc_name" name="direc_name">
  </div>
    
    <label for="direc_dob">Dob</label>
    <input type="date" id="direc_dob" name="direc_dob">
 <div>
 <label for="direc_bio">Bio</label>
  <input type="text" id="direc_bio" name="direc_bio">
  </div>
  <div>
  <label for="direc_image">Image</label>
  <input type="text" id="direc_image" name="direc_image">
  </div>
  
<button>Create director</button >


<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
